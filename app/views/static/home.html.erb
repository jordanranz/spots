            {
                "lightness": 20
            }
        ]
    },
    {},
    {
        "featureType": "road",
        "stylers": [
            {
                "lightness": 20
            }
        ]
    }

  ];

  handler = Gmaps.build('Google');
  handler.buildMap({ 
    provider: {
      zoom: 10,
      center: new google.maps.LatLng(48.7502, -122.4750),
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      styles: mapStyle
    }, 
    internal: {id: 'map'}}, 
    function(){
      markers = handler.addMarkers([
      {
        "lat": 48.7502,
        "lng": -122.4750,
        "infowindow": "Bellingham!"
      }
      ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

